
<div class="container">
  <div class="row">
     <div class="col-lg-12">
        <h1>
          <%= @post.title %>
        </h1>
    </div>
  </div>
  <div class="row">
     <div class="col-lg-10">
        <div class="row">
            <% if @post.img != nil %>
              <img src="<%= "/img/#{@post.id.to_s + ".jpg"}" %>">
            <% end %>
        </div>

        <div class="row">
          <p>本文：<%= simple_format(@post.body) %></p>
        </div>
        <div class="row">
          <label>登録日：<%= @post.created_at.strftime("%Y年 %m月 %d日 %H:%M:%S") %></label>
        </div>
        <div class="row">
          <label>更新日：<%= @post.updated_at.strftime("%Y年 %m月 %d日 %H:%M:%S") %></label>
        </div>

        
    </div>
    <div class="col-lg-2">
    <%= link_to "戻る", '/index', class: 'btn btn-info' %>
    </div>
  </div>
</div>

